{
  "name": "mapp",
  "version": "1.0.0",
  "description": "Mapp application",
  "main": "./build/index.js",
  "author": {
    "name": "Andr35",
    "email": "a@b.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/Andr35/mapp",
  "scripts": {
    "build": "tsc",
    "electron:start": "npm run build && electron ./",
    "electron:pack": "npm run build && electron-builder build --dir",
    "electron:build-windows": "npm run build && electron-builder build --windows",
    "electron:build-mac": "npm run build && electron-builder build --mac"
  },
  "dependencies": {
    "@capacitor-community/electron-core": "^0.4.0"
  },
  "devDependencies": {
    "electron": "~9.0.3",
    "electron-builder": "~22.7.0",
    "typescript": "~3.9.5"
  },
  "keywords": [
    "capacitor",
    "electron"
  ],
  "build": {
    "appId": "it.andr35.${name}",
    "productName": "Mapp",
    "files": [
      "assets/*",
      "build/index.js",
      "preloader.js",
      "plugins/*",
      "capacitor.config.json",
      "app/**"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "appIcon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "appIcon.ico"
    },
    "linux": {
      "target": [
        "deb",
        "tar.gz"
      ],
      "synopsis": "Mapp App",
      "description": "Mapp Application",
      "category": "Utility"
    }
  }
}