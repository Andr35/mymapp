{
  "name": "mymapp",
  "version": "0.1.7",
  "description": "MyMapp application",
  "main": "./build/index.js",
  "author": {
    "name": "andr35",
    "email": "andrea.zorzi.za@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/Andr35/mymapp",
  "scripts": {
    "build": "tsc",
    "electron:start": "npm run build && electron ./",
    "electron:pack": "npm run build && electron-builder build --dir",
    "electron:build-windows": "npm run build && electron-builder build --windows",
    "electron:build-mac": "npm run build && electron-builder build --mac",
    "electron:build-linux": "npm run build && electron-builder build --linux"
  },
  "dependencies": {
    "@capacitor-community/electron-core": "^1.2.3"
  },
  "devDependencies": {
    "electron": "^9.2.0",
    "electron-builder": "^22.8.0",
    "typescript": "~3.9.5"
  },
  "keywords": [
    "capacitor",
    "electron"
  ],
  "build": {
    "appId": "it.andr35.mymapp",
    "productName": "MyMapp",
    "artifactName": "mymapp.${ext}",
    "files": [
      "assets/*",
      "build/index.js",
      "preloader.js",
      "plugins/*",
      "capacitor.config.json",
      "app/**"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "assets/appIcon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/appIcon.ico"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "synopsis": "MyMapp App",
      "description": "MyMapp Application",
      "category": "Utility",
      "icon": "assets/appIcon.png"
    }
  }
}
